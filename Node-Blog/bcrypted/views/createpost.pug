html
	-var title='Create Post'
	include includes/head.pug
	body
		if user
			include includes/loggedinnav.pug
			h5 User :#{user.name} #{user.lastname}
				form.bulletin(action='/redirectcreatepost', method='post')
					div.row
						div.col.s12.col.m8.col.offset-m2
							input.titlebar(type='text', autofocus, name='title', placeholder="Title" required)
						div.col.s12.col.m8.col.offset-m2
							textarea.messagearea(rows="10" cols="50" type='text', name="bericht" placeholder="Let it all out..." required)
						div.center-align
							input.waves-effect.waves-light.btn.btn-large(type='submit', value='Post Message')
					
		else
			-var login='Please login to view this page'
			include includes/notloggedin.pug	