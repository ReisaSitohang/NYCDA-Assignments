html
	-var title='Welcome to notTumblr'
	include includes/head.pug
	body
		script.
			$(document).ready(function () {
				console.log("doc ready")
				$('#Submit').click(function(event) {
					console.log($('#email').val())
					if($('#email').val().trim().length === 0 || $('#pswrd').val().trim().length === 0) {
						event.preventDefault();
						$('#err-message').html("Your username or password is empty.");
					}
				});
			});

		if user
			a(href='/myposts') My Posts
			br
			a(href='/logout') log out
		else 		
			h1 Welcome to notTumblr
			br
			|  Email:
			br
			input#email(type='email', name='emailAddress')
			br
			|  Password:
			br
			input#pswrd(type='password', name='pswrd')
			br
			br
			input#Submit(type='submit', value='Submit')
			br
			a(href='/Register') Register
			br

		h2#err-message
